 <%- include('./templates/header.ejs') %>

<body>
    <section>
        <form action="/task/create_task" method="POST" id="createTask">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-8 col-xl-6">
              <div class="row">
                <div class="col text-center">
                  <h1>Create Task</h1>
                </div>
              </div>
              <div class="row align-items-center mt-4">
                <div class="col mt-4">
                    <label for="exampleFormControlTextarea1">Title</label>
                  <input type="text" name="title" class="form-control" placeholder="Task title" required>
                </div>
              </div>
              <div class="row align-items-center mt-4">
                    <label for="exampleFormControlTextarea1">Task Description:</label>
                    <textarea class="form-control" form="createTask" name="content" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
              <div class="row justify-content-start mt-4">
                <div class="col">
                   
                  <button type="submit" class="btn btn-primary mt-4">Create Task</button>
                </div>
                <a href='/task'>Back</a>
              </div>
            </div>
        </div>
    </form>
      </section>
  </body>
</html>